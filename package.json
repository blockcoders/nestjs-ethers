{
  "name": "nestjs-ethers",
  "version": "2.0.0-beta.1",
  "description": "The ethers.js library for NestJS",
  "author": "Blockcoders Engineering <hello@blockcoders.io>",
  "license": "Apache",
  "readmeFilename": "README.md",
  "main": "dist/index.js",
  "engineStrict": false,
  "engines": {
    "node": "^12.x || >=14.x || >=16.x"
  },
  "scripts": {
    "build": "rm -rf ./dist && tsc --p tsconfig.build.json",
    "prepare": "npm run build",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test,__tests__}/**/*.ts\" --fix",
    "lint:ci": "eslint \"{src,apps,libs,test,__tests__}/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "prepublishOnly": "npm run lint:ci && npm run test"
  },
  "precommit": [
    "lint:ci",
    "test:cov"
  ],
  "keywords": [
    "ethers",
    "ethers.js",
    "ethereum",
    "nestjs",
    "nest.js",
    "nest",
    "blockchain"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/blockcoders/nestjs-ethers"
  },
  "homepage": "https://github.com/blockcoders/nestjs-ethers/blob/main/README.md",
  "bugs": "https://github.com/blockcoders/nestjs-ethers/issues",
  "devDependencies": {
    "@ethersproject/abstract-signer": "^5.7.0",
    "@ethersproject/bytes": "^5.7.0",
    "@ethersproject/contracts": "^5.7.0",
    "@ethersproject/json-wallets": "^5.7.0",
    "@ethersproject/networks": "^5.7.1",
    "@ethersproject/providers": "^5.7.2",
    "@ethersproject/signing-key": "^5.7.0",
    "@ethersproject/wallet": "^5.7.0",
    "@ethersproject/web": "^5.7.1",
    "@ethersproject/wordlists": "^5.7.0",
    "@nestjs/common": "^9.2.1",
    "@nestjs/core": "^9.2.1",
    "@nestjs/platform-express": "^9.2.1",
    "@nestjs/platform-fastify": "^9.2.1",
    "@nestjs/testing": "^9.2.1",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.2.3",
    "@types/node": "^18.11.10",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "axios": ">=1.2.0",
    "coveralls": "^3.1.1",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.3.1",
    "nock": "^13.2.9",
    "pre-commit": "^1.2.2",
    "prettier": "^2.8.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.7",
    "supertest": "^6.3.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tsc-watch": "^5.0.3",
    "tsconfig-paths": "^4.1.1",
    "typescript": "^4.9.3"
  },
  "jest": {
    "verbose": true,
    "testTimeout": 80000,
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coveragePathIgnorePatterns": [
      "src/index.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 70,
        "lines": 70,
        "statements": 85
      }
    },
    "testEnvironment": "node"
  },
  "peerDependencies": {
    "@nestjs/common": "^8.0.0",
    "@ethersproject/abstract-signer": "^5.7.0",
    "@ethersproject/bytes": "^5.7.0",
    "@ethersproject/contracts": "^5.7.0",
    "@ethersproject/json-wallets": "^5.7.0",
    "@ethersproject/networks": "^5.7.1",
    "@ethersproject/providers": "^5.7.2",
    "@ethersproject/signing-key": "^5.7.0",
    "@ethersproject/wallet": "^5.7.0",
    "@ethersproject/web": "^5.7.1",
    "@ethersproject/wordlists": "^5.7.0"
  }
}
